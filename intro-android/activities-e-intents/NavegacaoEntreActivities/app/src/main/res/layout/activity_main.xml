<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_segunda_activity"
        app:layout_constraintEnd_toEndOf="@+id/btn_segunda_activity"
        app:layout_constraintStart_toStartOf="@+id/btn_segunda_activity"
        android:text="Main Activity"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_segunda_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir para segunda Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>