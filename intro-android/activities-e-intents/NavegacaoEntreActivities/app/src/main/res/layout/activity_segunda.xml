<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActivity">

    <Button
        android:id="@+id/btn_terceira_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir para terceira Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda Activity"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_terceira_activity"
        app:layout_constraintEnd_toEndOf="@+id/btn_terceira_activity"
        app:layout_constraintStart_toStartOf="@+id/btn_terceira_activity" />
</androidx.constraintlayout.widget.ConstraintLayout>