        <activity android:name=".activity.usuario.UsuarioPerfilActivity" />
        <activity android:name=".activity.empresa.EmpresaHomeActivity" />
        <activity android:name=".activity.empresa.EmpresaFinalizaCadastroActivity" />
        <activity
            android:name=".activity.usuario.UsuarioHomeActivity"
            android:theme="@style/Theme.IfoodClone" />
        <activity android:name=".activity.usuario.UsuarioFinalizaCadastroActivity" />
        <activity
            android:name=".activity.autenticacao.CriarContaActivity"
            android:theme="@style/Theme.IfoodClone2" />
        <activity
            android:name=".activity.autenticacao.RecuperarContaActivity"
            android:theme="@style/Theme.IfoodClone2" />
        <activity
            android:name=".activity.autenticacao.LoginActivity"
            android:theme="@style/Theme.IfoodClone2" />
        <activity
            android:name=".activity.app.SplashActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>