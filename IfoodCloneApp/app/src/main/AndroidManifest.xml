    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IfoodClone">
        <activity android:name=".activity.usuario.PedidoDetalheActivity"></activity>
        <activity android:name=".activity.usuario.UsuarioResumoPedidoActivity" />
        <activity android:name=".activity.usuario.UsuarioSelecionaPagamentoActivity" />
        <activity android:name=".activity.usuario.UsuarioSelecionaEnderecoActivity" />
        <activity android:name=".activity.usuario.CarrinhoActivity" />
        <activity android:name=".activity.empresa.EmpresaProdutoDetalhesActivity" />
        <activity android:name=".activity.empresa.EmpresaCardapioActivity" />
        <activity android:name=".activity.usuario.UsuarioFormEnderecoActivity" />
        <activity android:name=".activity.empresa.EmpresaFormProdutoActivity" />
        <activity android:name=".activity.empresa.EmpresaEntregasActivity" />
        <activity android:name=".activity.empresa.EmpresaEnderecoActivity" />
        <activity android:name=".activity.empresa.EmpresaAddMaisActivity" />
        <activity android:name=".activity.empresa.EmpresaRecebimentosActivity" />
        <activity android:name=".activity.empresa.EmpresaCategoriasActivity" />
        <activity android:name=".activity.empresa.EmpresaConfigActivity" />
        <activity android:name=".activity.usuario.UsuarioEnderecosActivity" />
