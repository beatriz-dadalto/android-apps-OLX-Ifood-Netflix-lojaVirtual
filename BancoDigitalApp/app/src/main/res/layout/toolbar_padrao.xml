            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
